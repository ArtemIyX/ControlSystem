<Window x:Class="WM_ControlSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WM_ControlSystem" 
        xmlns:viewmodels="clr-namespace:WM_ControlSystem.MVVM.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainVM}"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="500" Width="700" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5" MinWidth="100">
            <TextBlock Text="Temperature ℃" HorizontalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding TempItems}" SelectedIndex="{Binding SelectedTemp}" Margin="5"/>
            <TextBlock Text="Power" HorizontalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding PowerItems}" SelectedIndex="{Binding SelectedPower}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
